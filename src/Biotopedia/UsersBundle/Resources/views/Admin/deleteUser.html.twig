{# src/Biotopedia/UsersBundle/Resources/views/Admin/deleteUser.html.twig #}

{% extends "BiotopediaUsersBundle::layout.html.twig" %}

{% block title %}
  Supprimer un utilisateur - {{ parent() }}
{% endblock %}

{% block biotopediausers_content %}
  <h2 class="content-titre">Supprimer un utilisateur</h2>
  
    <p>Etes-vous certain de vouloir supprimer l'utilisateur <b>"{{ user.username }}"</b> ?</p>

  {# On met l'id del'utilisateur dans la route de l'action du formulaire #}
  <form action="{{ path('bp_users_admin_deleteUser', {'id': user.id}) }}" method="post">
    <a href="{{ path('bp_users_admin_homepage', {'id': user.id}) }}" class="">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à l'index
    </a>

    {# Ici j'ai écrit le bouton de soumission à la main #}
    <input type="submit" value="Supprimer" class="btn-danger" />
    {# Ceci va générer le champ CSRF #}
    {{ form_rest(form) }}
  </form> 
{% endblock %}