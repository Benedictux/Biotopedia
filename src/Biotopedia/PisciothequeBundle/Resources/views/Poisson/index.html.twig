{# src/Biotopedia/PisciothequeBundle/Resources/views/Poisson/index.html.twig #}

{% extends "BiotopediaPisciothequeBundle::layout.html.twig" %}

{% block title %}
	Index poisson - {{ parent() }}
{% endblock %}

{% block titre %}
  {{ parent() }}<h3 class="content-titre">Index poissons</h3>
{% endblock %}

{% block biotopediapisciotheque_content %}
	
	<p>Hello,</br>
		Bienvenue sur la Pisciothèque, la banque de données de poissons du site {{ website }} !</br>
		Cette dernière a pour vocation, le regroupement de poissons et leurs informations déstinées aux aquariphils et autres.</br>
		Voici les Poissons présents sur le site :
	</p>
		
	<nav id="navigateur-poisson">
	{% for poisson in poissons %}
		<a class = "index-poisson" href = "{{ path('biotopedia_pisciotheque_showPoisson', { 'id': poisson.id }) }}">
		<table style = "background-image: url({{ asset ((poisson.image.webPath) | imagine_filter('my_thumb_out')) }});">
			<thead>
				<tr>
					<th>
						<a href="{{ path('biotopedia_pisciotheque_showPoisson', { 'id': poisson.id }) }}">
							{{ poisson.scientificName }}</a>
					</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>
					</td>
				</tr>
			</tbody>
		</table>
		</a>
	{% endfor %}
	</nav>
{% endblock %}

{% block barre_lateral %}
  {% block barre_lateral_titre %}<h3>Menu Poisson</h3>{% endblock barre_lateral_titre %}
  {% block barre_lateral_navigation %}
    <ul>
	    <li><a href="{{ path('biotopedia_pisciotheque_indexFamille') }}">
	      	Index Familles</a></li>
		<li><a href="{{ path('biotopedia_pisciotheque_addFamille') }}">
			Ajouter une Famille</a></li>
    </ul>
  {% endblock barre_lateral_navigation %}
{% endblock barre_lateral %}