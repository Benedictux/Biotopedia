{# src/Biotopedia/MediathequeBundle/Resources/views/layout.html.twig #}

{% extends "::base.html.twig" %}

{% block title %}
  Médiathèque - {{ parent() }}
{% endblock %}

{% block body %}
 	{# Sous-titre commun à toutes les pages du bundle#}
 	{% block titre %}
 		<h1 class="layout-titre">Médiathèque</h1>
 	{% endblock %}

 		{# On affiche les messages flash que définissent les contrôleurs du bundle (inspirer du layout.html.twig du FOSUser Bundle ) #}
		{% for type, messages in app.session.flashbag.all() %}
			{% for message in messages %}
				<div class="flash-{{ type }}">
					{{ message }}
				</div>
			{% endfor %}
		{% endfor %}

  	{# On définit un nouveau bloc, que les vues du bundle pourront remplir #}
  	{% block biotopediamediatheque_content %}
  	{% endblock biotopediamediatheque_content%}
{% endblock body%}

{% block javascripts %}
{% endblock %}