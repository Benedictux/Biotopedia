{# src/Biotopedia/MediathequeBundle/Resources/views/Categorie/addCategorie.html.twig #}

{% extends "BiotopediaMediathequeBundle::layout.html.twig" %}

{% block title %}
  Ajouter une catégorie - {{ parent() }}
{% endblock %}

{% block titre %}
  {{ parent() }}<h3 class="content-titre">Ajouter une catégorie</h3>
{% endblock %}

{% block biotopediamediatheque_content %}
	<p>Vous vous apprêtez à ajouter une catégorie dans la mediathèque du site Biotopedia !</p>
	<form action="{{ path('biotopedia_mediatheque_addCategorie') }}" method="post" {{ form_enctype(form) }}>
		<fieldset>
      <legend>Catégorie</legend>
      {# Les erreurs générales du formulaire. #}
    	<div class="error">
      		{{ form_errors(form) }}
    	</div>
		  <table>
      	<tr>
      		<td>{{ form_label(form.name, "Nom") }}</td>
          <td>{{ form_label(form.image, "Image") }}</td>
      	</tr>

      	<tr>
      		<td>
      			{{ form_errors(form.name) }}
      			{{ form_widget(form.name) }}
      		</td>
          <td>
            {{ form_errors(form.image) }}
            {{ form_widget(form.image) }}
          </td>
      	</tr>
        <tr>
          <td colspan="4">
            {{ form_label(form.description, "Description") }}
          </td>
        </tr>
        <tr>
          <td colspan="4">
            {{ form_errors(form.description) }}
            {{ form_widget(form.description, {'attr': {'rows': '16', 'cols':'50'}}) }}
          </td>
        </tr>

    		<tr>
    			<td>
    				{# Génération des champs pas encore écrits. Dans cet exemple, ce serait « image », mais aussi le champ CSRF (géré automatiquement par Symfony !) et tous les champs cachés (type « hidden »). #}
    				{{ form_rest(form) }}
    			</td>
    		</tr>
      </table>
    </fieldset>
	</form>
{% endblock %}

{% block javascripts %}
{% endblock %}